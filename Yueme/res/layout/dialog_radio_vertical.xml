<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerInParent="true"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="约么"
        android:id="@+id/tv_dialog_title"
        android:layout_marginLeft="10dip"
        android:textSize="15sp"
        android:textColor="#2dbbe9"
        android:layout_marginTop="10dip"/>
    <ImageView android:background="#dfdddd"
        android:layout_height="1dip"
        android:layout_width="match_parent"/>
    <RadioGroup android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/rg_choose"
        android:orientation="vertical">
        <ListView android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:dividerHeight="5dip"
            android:divider="#ffffff"
            android:id="@+id/lv_dialog"></ListView>
        <!-- <RadioButton android:layout_width="260dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:button="@null"
            android:text="男"
            android:textColor="@color/radio_dialog_text_color"
            android:background="@drawable/radio_dialog_bg"/>
        <RadioButton android:layout_width="260dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:button="@null"
            android:text="女"
            android:textColor="@color/radio_dialog_text_color"
            android:background="@drawable/radio_dialog_bg"/>
        -->
    </RadioGroup>
    <ImageView android:background="#dfdddd"
        android:layout_height="1dip"
        android:layout_width="match_parent"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="65dip"
        android:orientation="horizontal">
        <Button android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="取消"
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#666666"
            android:gravity="center"
            android:background="#ffffff"
            />
        <ImageView android:layout_width="1dip"
            android:layout_height="20dip"
            android:layout_gravity="center"
            android:background="#dfdddd"
            />
        
        <Button android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="#666666"
            android:id="@+id/btn_ok"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ffffff"
            />
    </LinearLayout>
</LinearLayout>
