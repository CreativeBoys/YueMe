<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/titlebar_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/register"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/back_icon" />
    </RelativeLayout>

    <EditText
        android:id="@+id/phoneNumEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginRight="22dp"
        android:layout_toRightOf="@+id/textView2"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:text="@string/verifi_code"
        android:textColor="#00B2EE"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/verifiEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/phoneNumEt"
        android:layout_marginRight="22dp"
        android:textSize="25sp" />

    <TextView
        
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/verifiEt"
        android:textColor="#00B2EE"
        android:textSize="25sp"
        android:text="@string/password" />

    <Button
        android:id="@+id/verifiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/verifiEt"
        android:layout_alignBottom="@+id/verifiEt"
        android:layout_alignRight="@+id/verifiEt"
        android:background="@drawable/verifi_btn"
        android:text="@string/click_send"
        android:textColor="#EEEE00" />

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginRight="22dp"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneNumEt"
        android:layout_alignLeft="@+id/textView2"
        android:textColor="#00B2EE"
        android:textSize="25sp"
        android:text="昵称"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginBtn"
        android:layout_below="@+id/topLayout"
        android:layout_marginTop="53dp"
        android:text="@string/phoneNum"
        android:textColor="#00B2EE"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneNumEt"
        android:layout_alignTop="@+id/textView5"
        android:ems="10"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/forgetPasswordTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_register"
        android:layout_below="@+id/passwordEt"
        android:layout_marginTop="21dp"
        android:text="@string/forget_password" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/passwordEt"
        android:layout_below="@+id/forgetPasswordTv"
        android:layout_marginTop="36dp"
        android:background="@drawable/login_bg"
        android:text="@string/register"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/hadAccountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_register"
        android:layout_alignLeft="@+id/verifiBtn"
        android:text="@string/had_account" />
    
</RelativeLayout>