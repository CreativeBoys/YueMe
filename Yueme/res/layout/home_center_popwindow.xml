<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#121a2a" >
    <TextView android:layout_width="match_parent"
        android:layout_height="40dip"
        android:textSize="20sp"
        android:text="请选择约起的类型"
        android:textColor="#ffffff"
        android:gravity="center"
        />
    <View android:layout_width="match_parent"
        android:background="#74787c"
        android:layout_height="1dip"/>
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
<!-- 主页popwindow布局 -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/yue_learning"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yue_learning" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yue_learning"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="约自习"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </RelativeLayout>
    
    <RelativeLayout
         android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <Button
            android:id="@+id/yue_home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yue_home" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yue_home"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="约回家"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </RelativeLayout>
    
    <RelativeLayout
         android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent" 
        android:layout_marginLeft="20dp">

        <Button
            android:id="@+id/yue_more"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/home_add" />

    </RelativeLayout>
</LinearLayout>
</LinearLayout>
